@page
@model AbbyWeb.Pages.Categories.IndexModel


<div class="row pt-4">
	<div class="col-6">

		<h2 class="text-primary">Category list</h2>
	</div>
		<div class="col-6 text-end">
			<a asp-page="create" class="btn btn-primary">

			<i class="bi bi-plus-square-fill"></i>	&nbsp Create New Category
			</a>

	</div>
	<br /><br />
				<table class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>

				<th>
					Category Name
				</th>
				<th>
					Display order
				</th>
				<th></th>
			</tr>

		</thead>
		<tbody>

			@foreach(var obj in Model.Categories)
			{
							<tr>
			<td>@obj.Name</td>
			<td>@obj.DisplayOrder</td>
			<td>
				<div class="w-75 btn-group" role="group">
				<a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2 "><i class="bi bi-pencil-fill"></i></a>
				<hr/>
				<a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 "><i class="bi bi-x-lg"></i></a>
				</div>
			</td>
			</tr>

			}

		</tbody>

	</table>
</div>